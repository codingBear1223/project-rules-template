{
    "import": ["@cspell/dict-lorem-ipsum/cspell-ext.json"],
    "caseSensitive": false,
    "dictionaries": ["custom-words"],
    "dictionaryDefinitions": [
        {
            "name": "custom-words",
            "path": "./.cspell/custom-words.txt",
            "addWords": true
        }
    ],
    "ignorePaths": [
        "**/node_modules/**",
        "**/dist/**",
        "**/build/**",
        "**/public/**",
        "**/src/assets/**",
        "**/language/**",
        "**/language.ts",
        "eslint.config.js",
        "stylelint.config.js",
        "prettier.config.js",
        "tsconfig.json",
        "tsconfig.node.json",
        "tsconfig.app.json"
    ]
}
