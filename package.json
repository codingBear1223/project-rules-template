{
  "name": "project-rules",
  "version": "1.0.0",
  "description": "monorepo for project rules",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "lint:style": "stylelint \"{packages,apps}/**/*.{css,scss}\"",
    "spellcheck": "cspell lint --dot --gitignore --color --cache --show-suggestions \"(packages|apps)/**/*.{html,js,jsx,ts,tsx,css,scss}\"",
    "commit": "git-cz",
    "prepare": "husky"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@eslint/js": "8.50.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "commitizen": "4.3.0",
    "cspell": "8.10.4",
    "cz-git": "1.9.3",
    "eslint": "^8.50.0",
    "espree": "^10.3.0",
    "globals": "^11.12.0",
    "husky": "9.0.11",
    "postcss-styled-syntax": "0.6.4",
    "stylelint": "16.6.1",
    "stylelint-config-standard": "36.0.1",
    "typescript-eslint": "8.18.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --cache --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --cache --parser=typescript --write"
    ],
    "*.{css,scss,less,styl}": [
      "stylelint --fix",
      "prettier --cache --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
